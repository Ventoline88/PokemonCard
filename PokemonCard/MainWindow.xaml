<Window x:Class="PokemonCard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PokemonCard"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="400" Background="DarkGray">
    <Grid Margin="20" Background="DarkCyan">
        
        <!--Rows for card sections-->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!--HEADER-->
            <RowDefinition Height="2*"/> <!--PICTURE-->
            <RowDefinition Height="Auto"/> <!--SUB INFO-->
            <RowDefinition Height="*"/> <!--MOVE 1-->
            <RowDefinition Height="*"/> <!--MOVE 2-->
            <RowDefinition Height="Auto"/> <!--WEAK/RESIST/RETREAT-->
            <RowDefinition Height="Auto"/> <!--FOOTER-->
        </Grid.RowDefinitions>

        <!--Columns-->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!--HEADER ROW 0-->
        
        <Grid Grid.Row="0" Grid.ColumnSpan="3" Margin="6">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/> <!--NAME-->
                <ColumnDefinition Width="*"/> <!--SPACE-->
                <ColumnDefinition Width="Auto"/> <!--HP-->
            </Grid.ColumnDefinitions>
            
            <!--NAME-->
            <Border Grid.Column="0" BorderBrush="Black" BorderThickness="1" Margin="2" Padding="5">
                <TextBlock Text="NAME" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Border>
            
            <!--EMPTY SPACE-->
            <Border Grid.Column="1" BorderBrush="Black" BorderThickness="1" Margin="2" Padding="5">
                <TextBlock Text="(empty)" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>
            
            <!--HP-->
            <Border Grid.Column="2" BorderBrush="Black" BorderThickness="1" Margin="2" Padding="5">
                <TextBlock Text="HP" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Border>
            
        </Grid>

        <!--IMAGE ROW 1-->
        <Border Grid.Row="1" Grid.ColumnSpan="3" Margin="6" BorderBrush="Black" BorderThickness="1" Background="LightGray">
            <Rectangle Width="220" Height="220" Fill="DarkGray" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>

        <!--SUB INFO ROW 2-->
        <Border Grid.Row="2" Grid.ColumnSpan="3" Margin="6" BorderBrush="Black" BorderThickness="1">
            <TextBlock Text="SUB-INFO / NO / POKEMON TYPE / HT WT" TextAlignment="Center"/>
        </Border>

        <!--ATTACK 1 ROW 3-->

        <Grid Grid.Row="3" Grid.ColumnSpan="3" Margin="6">
            <Grid.RowDefinitions>
                <!--ATTACK HEADER-->
                <RowDefinition Height="Auto"/>
                <!--ATTACK DESCRIPTION-->
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <!--ICON-->
                <ColumnDefinition Width="Auto"/>
                <!--NAME-->
                <ColumnDefinition Width="*"/>
                <!--DAMAGE-->
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!--HEADER ROW-->
            <Border Grid.Row="0" Grid.Column="0" BorderBrush="Black" BorderThickness="1" Margin="2" Padding="5">
                <TextBlock Text="ICON"/>
            </Border>

            <Border Grid.Row="0" Grid.Column="1" BorderBrush="Black" BorderThickness="1" Margin="2" Padding="5">
                <TextBlock Text="ATTACK NAME" TextAlignment="Center"/>
            </Border>

            <Border Grid.Row="0" Grid.Column="2" BorderBrush="Black" BorderThickness="1" Margin="2" Padding="5">
                <TextBlock Text="DAMAGE"/>
            </Border>

            <!--DESCRIPTION ROW-->
            <Border Grid.Row="1" Grid.ColumnSpan="3" Grid.Column="0" BorderBrush="Black" BorderThickness="1" Margin="2" Padding="5">
                <TextBlock Text="ATTACK DESCRIPTION GOES HERE, SKADNFAOSKDFMPOISADCPOIAWEMOFIAPEIOFJA" TextWrapping="Wrap"/>
            </Border>
        </Grid>

        <!--ATTACK 2 ROW 4-->
        <Grid Grid.Row="4" Grid.ColumnSpan="3" Margin="6">
            <Grid.RowDefinitions>
                <!--ATTACK HEADER-->
                <RowDefinition Height="Auto"/>
                <!--ATTACK DECRIPTION-->
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <!--ICON-->
                <ColumnDefinition Width="Auto"/>
                <!--NAME-->
                <ColumnDefinition Width="*"/>
                <!--DAMAGE-->
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!--HEADER ROW-->
            <Border Grid.Row="0" Grid.Column="0" BorderBrush="Black" BorderThickness="1" Margin="2" Padding="5">
                <TextBlock Text="ICON"/>
            </Border>

            <Border Grid.Row="0" Grid.Column="1" BorderBrush="Black" BorderThickness="1" Margin="2" Padding="5">
                <TextBlock Text="ATTACK NAME" TextAlignment="Center"/>
            </Border>

            <Border Grid.Row="0" Grid.Column="2" BorderBrush="Black" BorderThickness="1" Margin="2" Padding="5">
                <TextBlock Text="DAMAGE"/>
            </Border>

            <!--DESCRIPTION ROW-->
            <Border Grid.Row="1" Grid.ColumnSpan="3" BorderBrush="Black" BorderThickness="1" Margin="2" Padding="5">
                <TextBlock Text=" ATTACK DESCRIPTION GOES HERE, OEIFJCAWMPOEFJCAPMOEFIJASMPEOFJCAPMOEFIJ" TextWrapping="Wrap"/>
            </Border>
        </Grid>
        
        <!--WEAK / RESIST / RETREAT-->
        <Grid Grid.Row="5" Grid.ColumnSpan="3" Margin="6">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" BorderBrush="Black" BorderThickness="1" Margin="2" Padding="5">
                <TextBlock Text="WEAKNESS"/>
            </Border>

            <Border Grid.Column="1" BorderBrush="Black" BorderThickness="1" Margin="2" Padding="5">
                <TextBlock Text="RESITANCE"/>
            </Border>

            <Border Grid.Column="2" BorderBrush="Black" BorderThickness="1" Margin="2" Padding="5">
                <TextBlock Text="RETREAT"/>
            </Border>
        </Grid>

        <!--FOOTER-->
        <Grid Grid.Row="6" Grid.ColumnSpan="3" Margin="6">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" BorderBrush="Black" BorderThickness="1" Margin="2" Padding="5">
                <TextBlock Text="# / SET"/>
            </Border>

            <Border Grid.Column="1" BorderBrush="Black" BorderThickness="1" Margin="2" Padding="5">
                <TextBlock Text="COPYWRIGHT TEXT"/>
            </Border>

            <Border Grid.Column="2" BorderBrush="Black" BorderThickness="1" Margin="2" Padding="5">
                <TextBlock Text="JAYADADA WADADAD NICE" TextWrapping="Wrap"/>
            </Border>
        </Grid>

    </Grid>
</Window>
